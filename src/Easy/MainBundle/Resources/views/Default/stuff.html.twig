{% extends 'EasyMainBundle::layout.html.twig' %}
{% block pageContent %}
    <section class="section">
        <div class="content">
            <p class="title">{{ title[content[0].type] }}</p>
            <div class="links">
                {% for stuff in content %}
                    <a href="#popup{{ loop.index }}" class="popup">
                        {% if stuff.media is defined %}
                            <div style="width: 100%; height: 165px; background: url('{% path stuff.media, 'big' %}'); background-size: cover;">
                            </div>
                        {% endif %}
                        {{ stuff.name }}
                    </a>
                    <div style='display:none;'>
                        <div id='popup{{ loop.index }}' style='padding:10px; background:#fff;'>
                            <div class="rightBlock" style="width:45%;">
                                <div class="advantage2 red" style="text-align: right;">
                                    <strong>{{ stuff.name }}</strong>
                                    {% autoescape false %}
                                        {{ stuff.text }}
                                    {% endautoescape %}
                                </div>
                            </div>
                            <div class="leftBlock" style="width: 52%;margin-left: 3%;margin-right: 0;margin-top: 5px;">
                                {% media stuff.media, 'big' with {'style': 'width: 100%;height: initial;'} %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block sideHeader %}
{% endblock %}

{% block topHeader %}
    <ul style="position: relative;">
        {% for key,value in teacherMenu %}
            <li><a href="/stuff/{{ key }}" class="scroll">{{ value }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}

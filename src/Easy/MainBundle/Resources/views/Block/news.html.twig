{% extends 'EasyMainBundle::layout.html.twig' %}
{% block pageContent %}
    <section class="section">
        <div class="content" style="">
            {% for new in content %}
                <div style="display: table;margin-bottom: 50px;width: 100%;">
                    <p class="title">{{ new.getName() }}</p>
                    <div class="inside">
                        {% autoescape false %}
                            {{ new.getText()}}
                        {% endautoescape %}
                    </div>
                    <div class="buttonSquare">
                        <a href="/news/{{ new.getId() }}">Узнать подробнее</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block sideHeader %}
{% endblock %}

{% block topHeader %}
    <ul style="position: relative;">
        <li><a href="/life/#section2" class="scroll">Наша жизнь</a></li>
    </ul>
{% endblock %}

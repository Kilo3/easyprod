{% extends 'EasyMainBundle::layout.html.twig' %}
{% block pageContent %}
   <div id="page">
        <div class="container">
            <div class="col-md-11">
                <p class="title">Новости</p>
                <div class="links">
                    {% for news in content %}
                        <a href="#popup{{ loop.index }}" class="popup">
                            {% if news.media is defined %}
                                <div style="width: 100%; height: 165px; background: url('{% path news.media, 'big' %}'); background-size: cover;">
                                </div>
                            {% endif %}
                            {{ news.name }}
                        </a>
                        <div style='display:none;'>
                            <div id='popup{{ loop.index }}' style='padding:10px; background:#fff;'>
                                <div class="inside">
                                    {% autoescape false %}
                                        {{ news.text }}
                                    {% endautoescape %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sideHeader %}
{% endblock %}

{% block topHeader %}
    <ul style="position: relative;">
        <li><a href="/life/#section2" class="scroll">Наша жизнь</a></li>
    </ul>
{% endblock %}

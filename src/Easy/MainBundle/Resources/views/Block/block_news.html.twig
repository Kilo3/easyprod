<div class="col-md-11">
    <a name="anchor{{ content.id }}" style="position: absolute;top: -115px;"></a>
    <div class="row">
        <div class="col-md-6">
            <p class="title">{{ content.getName() }}</p>
        </div>
        <div class="col-md-6">
            <a class="button-square" href="/news/" style="float:right;">Все новости</a>
        </div>
    </div>
    <div class="content-slider">
        {% for new in news %}
            <figure class="slidesjs-slide" style="margin:0;padding:0;">
                <div class="col-md-4 col-md-offset-1">
                    <div class="advantage2 red" style="text-align: right;">
                        <strong>{{ new.name }}</strong>
                        <p>
                        {% autoescape false %}
                            {{ new.text|striptags|slice(0, 400) }}...
                        {% endautoescape %}
                        </p>
                        <a class="button-square" href="/news/{{ new.getId() }}" style="float:right;">Узнать подробнее</a>
                    </div>
                </div>
                <div class="col-md-6" style="overflow: hidden;">
                    {% media new.media, 'big' with {'style':'width: 100%;'} %}
                </div>
                
            </figure>
        {% endfor %}

        <a href="#" class="slidesjs-previous slidesjs-navigation"><i class="fa fa-chevron-left"></i></a>
        <a href="#" class="slidesjs-next slidesjs-navigation"><i class="fa fa-chevron-right"></i></a>
    </div>
</div>
{% extends 'EasyMainBundle::layout.html.twig' %}
{% block pageContent %}
    <div id="page">
        <div class="container">
            <div class="col-md-11">
                {% for contacts in content.contacts %}
                    <div class='row' style="margin-bottom: 100px;">
                        <p class='title'>{{ contacts.name}}</p>
                        {% if contacts.gallery.GalleryHasMedias is defined %}
                            <div class='col-md-5'>
                                <div class='advantage2'>
                                    {% autoescape false %}
                                        {{ contacts.content}}
                                    {% endautoescape %}
                                </div>
                            </div>
                            <div class='col-md-6 col-md-offset-1'>
                                <div class='slidesCont'>
                                    {% if contacts.gallery.GalleryHasMedias is defined %}
                                        {% for galleryHasMedia in contacts.gallery.GalleryHasMedias %}
                                            {% media galleryHasMedia.media, 'big' with {'class': ''} %}
                                        {% endfor %}
                                    {% endif %}
                                    <a href='#' class='slidesjs-previous slidesjs-navigation'><i class='fa fa-chevron-left'></i></a>
                                    <a href='#' class='slidesjs-next slidesjs-navigation'><i class='fa fa-chevron-right'></i></a>
                                </div>
                            </div>
                        {% else %}
                            <div class='col-md-12'>
                                <div class='advantage2'>
                                    {% autoescape false %}
                                        {{ contacts.content }}
                                    {% endautoescape %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block sideHeader %}
{% endblock %}

{% block topHeader %}
    <ul style="position: relative;">
        
    </ul>
{% endblock %}

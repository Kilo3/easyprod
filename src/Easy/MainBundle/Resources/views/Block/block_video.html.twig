<div class='content' name="video" style="border-bottom: none;">
    <div style="width: 34px;
    height: 4px;
    border-radius: 2px;
    background-color: #FFF;
    border: none;
    margin: 0;
    background: #724EA0;margin-bottom: 10px;
margin-left: 2px;"></div>
    
    <div class='leftBlock'>
        <p class='title' style="text-align:left;color: #724EA0;font-size:1.8em;">{{ content.getName()}}</p>
        <div class='advantage'>
            {% autoescape false %}
                {{ content.getContent()}}
            {% endautoescape %}
        </div>
        <div class="buttonSquare purpleSquare" style="float:left;">
            <a href="javascript:;" onclick="toggleMenu('secondLayerMenu11');">Узнать подробнее<i class="fa fa-angle-right" style="font-size: 1.4em;
float: right;
clear: both;
display: table;
margin-left: 8px;
margin-top: -1px;"></i></a>
        </div>
        {% if content.secondMenu !=  -1%}
            {#<div class='buttonSquare'>
                <a href='javascript:;' onclick="toggleMenu('secondLayerMenu{{ content.getSecondMenu()}}');">Узнать подробнее</a>
            </div>#}
        {% endif %}
    </div>
    <div class='rightBlock' style="padding-top: 25px;">
            <a class='play'><i class='fa fa-play'></i></a>
            <a class='pause' href='#' style='display: none;'><i class='fa fa-pause'></i></a>
            {#
            <a class='expand'><i class='fa fa-expand'></i></a>
            <a class='compress' href='#' style='display: none;'><i class='fa fa-compress'></i></a>#}
    </div>
</div>

<div class="angleBlock">
    <video loop='' autoplay="autoplay" muted style="width: 100%;
transform: rotateZ(-4deg);
position: absolute;
top: -37%;">
        <source src='{% path gallery.GalleryHasMedias[0].media, 'reference' %}' type='video/mp4'>
    </video>
</div>
<div class="angleBlock" style="top: -16px;
height: 492px;
opacity: 1;
{#box-shadow: inset 0px 0px 23px 5px rgba(103, 61, 141, 0.27);#}

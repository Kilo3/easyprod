<div class='content'>
    <p class='title'>{{ content.getName()}}</p>
    <div class='leftBlock'>
        <div class='advantage'>
            {% autoescape false %}
                {{ content.getContent()}}
            {% endautoescape %}
        </div>
        <div class='buttonSquare'>
            <a href='javascript:;' onclick="toggleMenu('secondLayerMenu{{ content.getSecondMenu()}}');">Узнать подробнее</a>
        </div>
    </div>
    <div class='rightBlock'>
        <div class='videoContainer'>
            <div class="videoPreloader">
                {% if gallery.GalleryHasMedias[1] is defined %}
                    {% media gallery.GalleryHasMedias[1].media, 'big' %}
                {% endif %}
                <p>Пожалуйста, посмотрите наше видео</p>
            </div>
            <video loop=''>
                <source src='{% path gallery.GalleryHasMedias[0].media, 'reference' %}' type='video/mp4'>
            </video>  
            <a class='play'><i class='fa fa-play'></i></a>
            <a class='pause' href='#' style='display: none;'><i class='fa fa-pause'></i></a>
        </div>
    </div>
</div>
